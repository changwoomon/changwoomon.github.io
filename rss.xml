        title=&quot;series example&quot;
        src=&quot;/static/1ea4e56966cb5fb6e110d32124fd883c/8a7c7/series-example.jpg&quot;
        srcset=&quot;/static/1ea4e56966cb5fb6e110d32124fd883c/ca928/series-example.jpg 148w,
/static/1ea4e56966cb5fb6e110d32124fd883c/278fa/series-example.jpg 295w,
/static/1ea4e56966cb5fb6e110d32124fd883c/8a7c7/series-example.jpg 590w,
/static/1ea4e56966cb5fb6e110d32124fd883c/d1584/series-example.jpg 677w&quot;
        sizes=&quot;(max-width: 590px) 100vw, 590px&quot;
